                    },
                    "usersInMemory": {
                        "type": "array",
                        "format": "array",
                        "example": [
                            "eb51ab14-8e56-4170-87c8-436fca6a8312",
                            "eb51ab14-8e56-4170-87c8-436fca6a8312",
                            "eb51ab14-8e56-4170-87c8-436fca6a8312"

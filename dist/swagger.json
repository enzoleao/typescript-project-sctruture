{
    "openapi": "3.0.1",
    "info": {
        "title": "API o Aplicativo de Registro de Memorias",
        "description": "Essa API tem o objetivo de implementar os casos de uso, estrutura de segurança e outros elementos atinentes ao backend para a aplicação",
        "contact": {
            "name": "Suporte",
            "email": "leonardocostapsi@gmail.com"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/session": {
            "post": {
                "description": "Autentica o usuário na aplicação.",
                "tags": [
                    "Usuários"
                ],
                "requestBody": {
                    "description": "O usuário é autenticado na aplicação informando as suas credenciais de acesso.",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserLoginRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login realizado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserLoginResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Email ou senha incorreta."
                    },
                    "500": {
                        "description": "Erro no servidor."
                    }
                }
            }
        },
        "/me": {
            "get": {
                "description": "Retorna os dados do usuário logado",
                "tags": [
                    "Usuários"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successo.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/GetCurrentUserResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Token inválido."
                    },
                    "404": {
                        "description": "Usuário não encontrado."
                    },
                    "500": {
                        "description": "Erro servidor."
                    }
                }
            }
        },
        "/users": {
            "get": {
                "description": "Retorna todos usuários",
                "tags": [
                    "Usuários"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuários retornados sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/RegisterUserResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Usuário já foi cadastrado."
                    },
                    "500": {
                        "description": "Erro servidor."
                    }
                }
            },
            "post": {
                "description": "Registro de um usuário",
                "tags": [
                    "Usuários"
                ],
                "requestBody": {
                    "description": "Dados necessários para cadastro de um usuário",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RegisterUserRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário criado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/RegisterUserResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Usuário já foi cadastrado."
                    },
                    "500": {
                        "description": "Erro servidor."
                    }
                }
            }
        },
        "/avatar/{userId}": {
            "put": {
                "description": "Atualiza o avatar do usuário.",
                "tags": [
                    "Usuários"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "userId",
                        "schema": {
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                ],
                "requestBody": {
                    "description": "Dados necessários para alteração do avatar de um usuário",
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/UserAvatarUpdateRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login realizado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserAvatarUpdateResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Imagem não enviada."
                    },
                    "500": {
                        "description": "Erro no servidor."
                    }
                }
            }
        },
        "/memories": {
            "get": {
                "description": "Retorna todas as memórias do usuário autenticado.",
                "tags": [
                    "Memorias"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Memorias retornadas com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/GetMemoriesCurrentUser"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Token inválido ou expirado."
                    },
                    "500": {
                        "description": "Erro no servidor."
                    }
                }
            },
            "post": {
                "description": "Criação de memória do usuário.",
                "tags": [
                    "Memorias"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "description": "Dados necessários para cadastro de uma memória",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateMemoryRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Memoria criada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CreateMemoryResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Token inválido ou expirado."
                    },
                    "500": {
                        "description": "Erro no servidor."
                    }
                }
            }
        },
        "/memories/{memoryId}": {
            "delete": {
                "description": "Deleta uma memória.",
                "tags": [
                    "Memorias"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "memoryId",
                        "schema": {
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Memória deletada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/DeleteMemoryMediaResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Imagem não localizada."
                    },
                    "500": {
                        "description": "Erro no servidor."
                    }
                }
            }
        },
        "/medias": {
            "post": {
                "description": "O usuário adiciona medias à sua lembrança ex: fotos e videos.",
                "tags": [
                    "Memorias"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "description": "O usuário é autenticado na aplicação informando as suas credenciais de acesso.",
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateMemoryMediaRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Medias subidas resposta.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CreateMemoryMediaResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Ocorreu algum erro."
                    },
                    "500": {
                        "description": "Erro no servidor."
                    }
                }
            }
        },
        "/medias/{mediaId}": {
            "delete": {
                "description": "Delete mídia de uma memória.",
                "tags": [
                    "Memorias"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "mediaId",
                        "schema": {
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Mídia deletada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/DeleteMemoryMediaResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Imagem não localizada."
                    },
                    "500": {
                        "description": "Erro no servidor."
                    }
                }
            }
        },
        "/peoplesmemory": {
            "post": {
                "description": "Adiciona usuários à memória.",
                "tags": [
                    "Memorias"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "description": "O usuário é autenticado na aplicação informando as suas credenciais de acesso.",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RegisterPeoplesInMemory"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Mídia deletada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/DeleteMemoryMediaResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Imagem não localizada."
                    },
                    "500": {
                        "description": "Erro no servidor."
                    }
                }
            }
        },
        "/peoplesmemory/{memoryId}/{userId}": {
            "delete": {
                "description": "Remove um usuário da memória",
                "tags": [
                    "Memorias"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "memoryId",
                        "schema": {
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    {
                        "in": "path",
                        "name": "userId",
                        "schema": {
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuário removido da memória com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/RemovePeoplesInMemory"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Usuário ou memória não localizada."
                    },
                    "500": {
                        "description": "Erro no servidor."
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "RegisterUserRequest": {
                "type": "object",
                "properties": {
                    "email": {
                        "description": "E-mail do usuário que será criado.",
                        "type": "string",
                        "example": "enzopinheiro6@gmail.com"
                    },
                    "name": {
                        "description": "Nome completo do usuário que será criado.",
                        "type": "string",
                        "example": "Enzo Gabriel Pinheiro de Leão"
                    },
                    "birthday": {
                        "description": "Senha do usuario que vai se cadastrar.",
                        "type": "string",
                        "example": "2011-10-05T14:48:00.000Z"
                    },
                    "password": {
                        "description": "Senha do usuario que vai se cadastrar.",
                        "type": "string",
                        "example": "default32312"
                    }
                },
                "required": [
                    "email",
                    "name",
                    "password"
                ]
            },
            "RegisterUserResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "description": "Identificador do usuário criado.",
                        "type": "string",
                        "format": "uuid",
                        "example": "eb51ab14-8e56-4170-87c8-436fca6a8312"
                    },
                    "name": {
                        "description": "Nome completo do usuário criado.",
                        "type": "string",
                        "example": "Enzo Gabriel Pinheiro de Leão"
                    },
                    "email": {
                        "description": "Email do usuario criado.",
                        "type": "string",
                        "example": "enzopinheiro6@gmail.com"
                    },
                    "avatar": {
                        "description": "Avatar do usuario.",
                        "type": "string",
                        "example": null
                    },
                    "birthday": {
                        "description": "Avatar do usuario.",
                        "type": "datetime",
                        "example": "2011-10-05T14:48:00.000Z"
                    }
                }
            },
            "UserLoginRequest": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "Email do usuário.",
                        "example": "enzopinheiro6@gmail.com"
                    },
                    "password": {
                        "type": "string",
                        "description": "A senha do usuário.",
                        "exameple": "default123"
                    }

                            "email": {
                                "type": "string",
                                "description": "Email do usuário logado",
                                "example": "enzopinheiro6@gmail.com"
                            },
                            "avatar": {
                                "type": "string",
                                "description": "Avatar do usuário",
                                "example": "http://localhost:3000/public/1683069498402.jpeg"
